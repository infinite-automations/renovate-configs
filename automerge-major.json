{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Extends basic config with automerge enabled for major updates only",
  "extends": [
    "local>infinite-automations/renovate-configs:default"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "automerge": true
    }
  ]
}
