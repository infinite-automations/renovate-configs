{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Basic renovate config with dependency dashboard and automerge settings configured",
  "extends": [
    "config:best-practices",
    ":automergePr",
    ":automergeRequireAllStatusChecks",
    ":dependencyDashboard",
    ":disableRateLimiting",
    ":prConcurrentLimitNone",
    ":prImmediately",
    ":rebaseStalePrs",
    ":semanticCommits",
    "customManagers:biomeVersions",
    "workarounds:all"
  ],
  "platformAutomerge": true,
  "automergeStrategy": "squash"
}
